<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href='https://fonts.googleapis.com/css?family=Poppins' rel='stylesheet'>
    <title>Home</title>
    <style>
        body {
            font-family: 'Poppins';
            font-size: 15px;
        }

        .profile {
            display: flex;
            gap: 1em;
        }

        .profile-section a,
        .profile-section a:visited {
            color: black;

        }

        button {
            border: rgb(40, 40, 40) 2px solid;
            border-radius: 0.5em;
            background-color: rgb(40, 40, 40);
            color: white;
            margin-bottom: 4em;
        }

        button:hover {
            background-color: rgb(76, 95, 201);
            border-color: rgb(82, 82, 82);
            cursor: pointer;
        }
    </style>
</head>

<body>
    <main>
        <% if (doneUpload==="true" ) {%>
            <h3 style="color: rgb(0, 0, 0);">Successfully Posted!</h3>
            <% } else if (doneUpload==="false" ) { %>
                <h3 style="color: red;">Error, Post Failed.</h3>
                <% } %>
                    <% for (let user of users) { %>
                        <div class="profile">
                            <img style="width: 75px; height: 75px" src=<%- user.profileImage -%>/>
                            <div class="profile-section">
                                <h2><a href=<%- user.profile -%>><%- user.username -%></a></h2>
                                <form action="/images" enctype="multipart/form-data" id="form-<%- user.username -%>"
                                    method="post">
                                    <input type="text" name="username" hidden value=<%- user.username -%>>
                                    <button type="button"
                                        onclick="document.querySelector('#input-<%-user.username-%>').click()">UPLOAD</button>
                                    <input id="input-<%- user.username -%>" hidden type="file" name="file"
                                        accept="image/*"
                                        onchange="document.querySelector(`#form-<%- user.username -%>`).submit()" />
                                </form>
                            </div>
                        </div>
                        <% } %>
    </main>
</body>

</html>